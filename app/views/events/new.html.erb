<div class="logo-header-main">
    <h1>Bark Party</h1>
</div>

<div class="main-div">

    <div class="dashboard-div">
        <h1> <%= current_user.username %> </h1>
        <h2> <%= link_to "Home", root_path %> </h2>



    </div>

    <div class="party-div">

        <h1>Make a new party</h1>
        <br >

        <%= form_with model: @event do |f|%>
            <%= f.label :name %> <br >
            <%= f.text_field :name, class:"event-name-field"%> <br > <br >
            <%= f.submit %>

        <% end %>
        <br >
        <%= link_to "Cancel", root_path %>
    </div>

    <div class="invited-to-div">
    </div>

</div>